@page
@using MyContainer.Resources.Pages.Users
@model MyContainer.Pages.Containers.Index
@inject IStringLocalizer<UserPage> Localizer
<p>
    <a asp-page="Upsert" class="btn btn-primary">@Localizer["Create"]</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>@Localizer["Type"]</th>
        <th>@Localizer["Price"]</th>
        <th>@Localizer["Customer"]</th>
        <th>@Localizer["Actions"]</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var container in Model.Containers)
    {
        <tr>
            <td>@container.Id</td>
            <td>@container.ContainerType</td>
            <td>@container.TotalPrice</td>
            <td>@container.User.Name</td>
            <td>
                <a asp-page="Upsert" asp-route-id="@container.Id" class="btn btn-warning">@Localizer["Edit"]</a>
                <a asp-page="Delete" asp-route-id="@container.Id" class="btn btn-danger">@Localizer["Delete"]</a>
            </td>
        </tr>
    }
    </tbody>
</table>